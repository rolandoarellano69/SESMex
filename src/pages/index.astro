---
import Hero from "@/components/Hero.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
import About from "@/components/About.astro";
import Usicon from "@/components/icons/usicon.astro";
import Services from "@/components/Services.astro";
import Banner from "@/components/Banner.astro";
import LogoGrid from "@/components/LogoGrid.astro";
---

<Layout title="SES México." description="SES México empresa de seguridad">
  <Hero />
  <main class="px-4">
    <SectionContainer class="py-20 pb-32">
      <div class="py-10">
        <div class="max-w-screen-xl mx-auto px-4 md:px-8">
          <h3
            class="font-semibold text-xl lg:text-2xl text-wrap max-w-[750px] text-center text-gray-100"
          >
            Empresas que confian y respaldan nuestros servicios
          </h3>
          <LogoGrid />
        </div>
      </div>
    </SectionContainer>
    <SectionContainer>
      <h3 class="text-gray-100 text-center text-3xl font-semibold sm:text-4xl">
        Nuestros servicios
      </h3>
      <p class="mt-4 text-lg text-pretty text-gray-400">
        Los servicios están diseñados para brindar la mejor seguridad a
        nuestros clientes.
      </p>
      <Services />
    </SectionContainer>
    <Banner imageSrc="guardia-seguridad-lugar-trabajo (2).jpg"/>
    <SectionContainer>
      <h3 class="text-gray-100  text-3xl font-semibold sm:text-4xl">
        Sobre nosotros
      </h3>
      <p class="mt-4 text-lg text-pretty text-gray-400">
        Somos una empresa de seguridad privada con más de 20 años de
        experiencia en el mercado, brindando servicios de seguridad privada
        en la Ciudad de México y el Estado de México.
      </p>
      <About />

  </main>
</Layout>
