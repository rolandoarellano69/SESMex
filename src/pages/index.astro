---
import Hero from "@/components/Hero.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
import Abcalum from "@/components/icons/abcalum.astro";
import Medtronic from "@/components/icons/medtronic.astro";
import Fluidraicon from "@/components/icons/fluidraicon.astro";
import About from "@/components/About.astro";
import Usicon from "@/components/icons/usicon.astro";
import Services from "@/components/Services.astro";
---

<Layout title="SES México." description="SES México empresa de seguridad">
  <Hero />
  <main class="px-4">
    <SectionContainer class="py-20 pb-32">
      <div class="py-10">
        <div class="max-w-screen-xl mx-auto px-4 md:px-8">
          <h3
            class="font-semibold text-xl lg:text-2xl text-wrap max-w-[750px] text-center"
          >
            Empresas que confian y respaldan nuestros servicios
          </h3>
          <div class="mt-6">
            <ul
              class="flex gap-x-10 gap-y-6 flex-wrap items-center justify-center md:gap-x-16 text-gray-100"
            >
              <li>
                <Abcalum class="w-32 h-32" />
              </li>
              <li>
                <Fluidraicon class="w-32 h-32" />
              </li>
              <li>
                <Medtronic class="w-32 h-32" />
              </li>
            </ul>
          </div>
        </div>
      </div>
    </SectionContainer>
    <SectionContainer>
      <h2
        class="text-xl lg:text-2xl text-wrap max-w-[750px] font-semibold mb-6 flex gap-x-2 items-center justify-center"
      >
        <Usicon class="size-6 md:size-8" />
        ¿Quiénes somos?
      </h2>
      <About />
    </SectionContainer>
    <SectionContainer>
      <h3 class="text-gray-800 text-center text-3xl font-semibold sm:text-4xl">
        Nuestros servicios
      </h3>
      <p class="mt-4 text-lg text-pretty">
        Nuestros servicios están diseñados para brindar la mejor seguridad a
        nuestros clientes.
      </p>
      <Services />
    </SectionContainer>
  </main>
</Layout>
