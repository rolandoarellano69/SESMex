---
import Monitor from "./icons/Monitor.astro";
import RondinIcon from "./icons/RondinIcon.astro";
import ShellIcon from "./icons/Shellicon.astro";
import CarIcon from "./icons/CarIcon.astro";

const ICONS = {
  SEGURIDAD: {
    name: "Seguridad",
    class: "text-blue-700",
    icon: ShellIcon,
  },
  MONITOREO: {
    name: "Monitoreo",
    class: "text-blue-700",
    icon: Monitor,
  },
  RONDINES: {
    name: "Rondines",
    class: "text-blue-700",
    icon: RondinIcon,
  },
  PATRULLAJE: {
    name: "Patrullaje",
    class: "text-blue-700",
    icon: CarIcon,
  },
};
const SERVICES = [
  {
    title: "Personal de Seguridad",
    description:
      "Nuestro excelente equipo de oficiales de seguridad, esta altamente capacitado para ofrecer el mejor servicio  en  la protección y vigilancia de lugares y establecimientos, representando la imagen de su empresa con personal altamente profesional",
    icons: [ICONS.SEGURIDAD],
  },
  {
    title: "Patrullaje Táctico",
    description:
      "Su equipo altamente capacitado realiza rondas programadas con alta movilidad para garantizar la protección y vigilancia efectiva de áreas críticas, como estacionamientos y exteriores.",
    icons: [ICONS.PATRULLAJE],
  },
  {
    title: "Monitoreo CCTV y Alarmas",
    description:
      "Nuestro equipo de seguridad se encarga de mantener la seguridad de nuestros clientes y de la empresa.",
    icons: [ICONS.MONITOREO],
  },
  {
    title: "Rondines",
    description:
      "Nuestro equipo de seguridad se encarga de mantener la seguridad de nuestros clientes y de la empresa.",
    icons: [ICONS.RONDINES],
  },
];
---
<section class="py-14">
  <div class="max-w-screen-xl mx-auto px-4 text-center text-gray-600 md:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="mt-12">
        <ul class="grid gap-y-8 gap-x-12 sm:grid-cols-2 lg:grid-cols-2">
          {
            SERVICES.map(({ title, description, icons }) => (
              <article>
                <li class="space-y">
                  {icons.map((icon) => (
                    <div
                      class={`w-12 h-12 mx-auto bg-indigo-50 text-blue-600 rounded-full flex items-center justify-center ${icon.class}`}
                    >
                      <icon.icon class="size-6" />
                    </div>
                  ))}
                  <h4 class="text-2xl text-gray-100 m-2 font-semibold">{title}</h4>
                  <p class="text-sm text-gray-300 mt-4 text-pretty text-left">{description}</p>
                </li>
              </article>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
