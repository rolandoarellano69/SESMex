---
import PhoneIcon from "./icons/PhoneIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";
import LocationIcon from "./icons/LocationIcon.astro";

const ICONS = {
  PHONE: {
    name: "phone",
    class: "text-blue-700",
    icon: PhoneIcon,
  },

  EMAIL: {
    name: "email",
    class: "text-blue-700",
    icon: EmailIcon,
  },

  lOCATION: {
    name: "location",
    class: "text-blue-700",
    icon: LocationIcon,
  },
};
const CONTACT = [
  {
    icons: [ICONS.PHONE],
    contact: "664-503-91-65",
    title: "Teléfono",
  },
  {
    icons: [ICONS.EMAIL],
    contact: "sesmexico@outlook.com",
    title: "Email",
  },
  {
    icons: [ICONS.lOCATION],
    contact: "Plaza Campos, 1311 ",
    title: "Location",
  },
];
---

<section class="py-14">
  <div class="max-w-screen-lg mx-auto px-4 text-gray-600 md:px-8">
    <div class="max-w-xl space-y-3">
      <h3 class="text-blue-600 font-semibold">Contacto</h3>
      <p class="text-gray-300 text-3xl font-semibold sm:text-4xl">
        Háganos saber cómo podemos ayudarle
      </p>
      <p class="text-pretty text-base text-gray-100/80">
        Estamos aquí para ayudarle y responder a cualquier pregunta que pueda tener.
      </p>
    </div>
    <div class="mt-12">
      <ul
        class="mt-12 flex flex-wrap gap-x-12 gap-y-6 items-center lg:gap-x-24"
      >
        {
          CONTACT.map(({ icons, title, contact }) => (
            <li>
              <h4 class="text-gray-200 text-lg font-medium">{title}</h4>
              <div class="mt-3 flex items-center gap-x-3">
                {icons.map((icon) => (
                  <div class={`flex-none text-blue-600 ${icon.class}`}>
                    <icon.icon class="w-6 h-6" />
                  </div>
                ))}
              </div>
              <p class="mt-4 text-pretty text-base text-gray-100/80">{contact}</p>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
