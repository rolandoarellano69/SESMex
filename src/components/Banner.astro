---
const { imageSrc } = Astro.props;
---

<section class=" dark:text-gray-100">
  <div class="relative h-[50vh] md:h-[75vh] lg:h-[70vh]">
    <img
      src={imageSrc}
      alt="guardia de seguridad"
      class="absolute inset-0 w-full h-full object-cover rounded-2xl"
    />
    <div class="absolute inset-0 bg-black/20"></div>
    <div
      class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-white text-sm sm:text-base md:text-lg lg:text-xl"
    >
    </div>
  </div>
</section>
